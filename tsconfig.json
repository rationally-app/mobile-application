{
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "useUnknownInCatchVariables": false,
    "types": ["node", "jest"],
    "target": "esnext"
  },
  "includes": ["src"],
  "extends": "expo/tsconfig.base"
}
